@model IEnumerable<Gateau>
<h1 class="my-3">Mes gâteaux</h1>
<p>
    <a asp-action="CreerNouveauGateau">Créer nouveau produit</a>
</p>
<div class="row g-2">
@foreach (var item in Model)
{
    
    <div class="col-sm-3">
            <div class="card" style="height:30%;">
            <img src="@item.UrlImage" class="card-img-top" alt="Image du gâteau">
            <div class="card-body">
                <h5 class="card-title">@item.Nom</h5>
                <p class="card-text">@item.Description</p>
                @Html.ActionLink("Voir produit", "Details", new { id = item.Id })
            </div>
        </div>
    </div>

}
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlImage)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredients)
                </td>
                <td>
                    <img src="@item.UrlImage" alt="Alternate Text" style="width: 100px; height: 100px;"/>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Voir produit", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Supprimer", "Supprimer", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>